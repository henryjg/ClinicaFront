{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸ” Debug Token Issues - Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5174/login",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-data",
      "runtimeArgs": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor",
        "--auto-open-devtools-for-tabs",
        "--disable-background-timer-throttling",
        "--disable-renderer-backgrounding"
      ],
      "preLaunchTask": "ğŸš€ Start Dev Server"
    },
    {
      "name": "ğŸŒ Auto Debug Browser",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5174",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-auto-debug",
      "runtimeArgs": [
        "--auto-open-devtools-for-tabs",
        "--disable-web-security",
        "--disable-background-timer-throttling",
        "--remote-debugging-port=9222"
      ],
      "preLaunchTask": "ğŸš€ Start Dev Server"
    },
    {
      "name": "ğŸš€ Launch App + Debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": ["--host", "localhost", "--port", "5174"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "ğŸ”§ Full Debug Setup",
      "configurations": ["ğŸš€ Launch App + Debug", "ğŸ” Debug Token Issues - Chrome"]
    },
    {
      "name": "âš¡ Quick Auto Debug",
      "configurations": ["ğŸŒ Auto Debug Browser"]
    }
  ]
}
